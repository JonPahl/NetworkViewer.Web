{
  "openapi": "3.0.1",
  "info": {
    "title": "NetworkScanner.API",
    "version": "v1"
  },
  "paths": {
    "/api/Device": {
      "get": {
        "tags": [
          "Device"
        ],
        "summary": "Returns a list of Found Device on current network.",
        "description": "a list of devices from the database",
        "operationId": "Device",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/FoundDevice"
                  }
                }
              }
            }
          },
          "404": {
            "description": "The specified devices does not exist, or the current user does not have access to it.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Oui": {
      "get": {
        "tags": [
          "Oui"
        ],
        "summary": "Returns a list of OUI on current network.",
        "operationId": "Oui",
        "responses": {
          "200": {
            "description": "Returns items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OuiLookup"
                  }
                }
              }
            }
          },
          "400": {
            "description": "If the item is null",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/hex/Find({search})": {
      "get": {
        "tags": [
          "Oui"
        ],
        "summary": "Searches for OUI values based on provided MAC address.",
        "operationId": "hex",
        "parameters": [
          {
            "name": "search",
            "in": "path",
            "required": true,
            "description": "last 4 parts of mac address.",
            "schema": {
              "type": "string",
              "description": "last 4 parts of mac address.",
              "nullable": true,
              "example": "C0-64-C6"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns NIC manufacture(s) based on provided search hex value",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OuiLookup"
                  }
                }
              }
            }
          },
          "400": {
            "description": "If the item throws an error return details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/Base16/Find({search})": {
      "get": {
        "tags": [
          "Oui"
        ],
        "summary": "Searches for OUI values based on provided MAC address.",
        "operationId": "Base16",
        "parameters": [
          {
            "name": "search",
            "in": "path",
            "required": true,
            "description": "last 4 parts of mac address.",
            "schema": {
              "type": "string",
              "description": "last 4 parts of mac address.",
              "nullable": true,
              "example": "C064C6"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns NIC manufacture(s) based on provided search Base16 value",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OuiLookup"
                  }
                }
              }
            }
          },
          "400": {
            "description": "If the item throws an error return details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FoundDevice": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "key": {
            "nullable": true
          },
          "deviceId": {
            "type": "string",
            "nullable": true
          },
          "deviceName": {
            "type": "string",
            "nullable": true
          },
          "ipAddress": {
            "type": "string",
            "nullable": true
          },
          "foundAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "foundUsing": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "additionalProperties": {},
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "OuiLookup": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "key": {
            "nullable": true
          },
          "hexValue": {
            "type": "string",
            "nullable": true
          },
          "base16Value": {
            "type": "string",
            "nullable": true
          },
          "manufacturer": {
            "type": "string",
            "nullable": true
          }
        }
      }
    }
  }
}